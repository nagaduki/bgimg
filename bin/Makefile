# base
.PHONY: clean build run deploy clean

## deploy
.PHONY: deploy
deploy:
	@mkdir -p ~/bin/
	@cp set_background_align.sh ~/bin/
	@cp set_background_horizontal_align.sh ~/bin/
	@cp set_background_vertical_align.sh ~/bin/
	@cp set_background_hsb_brightness_light.sh ~/bin/
	@cp set_background_hsb_brightness_dark.sh ~/bin/
	@cp set_background_image.sh ~/bin/
	@cp set_background_zoom.sh ~/bin/
	@cp set_background_horizontal_align.lua ~/bin/
	@cp set_background_vertical_align.lua ~/bin/
	@cp set_background_hsb_brightness_light.lua ~/bin/
	@cp set_background_hsb_brightness_dark.lua ~/bin/
	@cp set_background_image.lua ~/bin/
	@cp set_background_zoom.lua ~/bin/
	@cp init.lua ~/bin/
	@cp ocr-check.sh ~/bin/
	@cp ocr-gdrive.py ~/bin/
	@cp add-utf8-bom.sh ~/bin/
	@cp has-utf8-bom.sh ~/bin/
	@cp remove-utf8-bom.sh ~/bin/

